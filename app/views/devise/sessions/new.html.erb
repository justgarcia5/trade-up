<div class="login-container my-5">
  <h2>Sign in</h2>
  <%= link_to user_facebook_omniauth_authorize_path, id: "facebook"  do %>
    <div class="facebook-div">
      <i class="fab fa-facebook facebook-icon"></i> Contunue with facebook
    </div>
  <% end %>

  <p>- OR -</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <label class="sr-only" for="inlineFormInputGroup"></label>
      <div class="input-group mb-2">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fa fa-envelope"></i></div>
        </div>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Enter email..." %>
      </div>
    </div>

    <div class="form-group">
      <label class="sr-only" for="inlineFormInputGroup"></label>
      <div class="input-group my-4">
        <div class="input-group-prepend">
          <div class="input-group-text"><i class="fa fa-unlock-alt"></i></div>
        </div>
        <%= f.password_field :password, class: "form-control", autocomplete: "new-password", placeholder: "Enter password..." %>
      </div>
    </div>

    <div class="text-center">
      <% if devise_mapping.rememberable? %>
        <div class="mt-3">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions mt-3">
        <%= f.submit "Log in", class: "btn btn-success" %>
      </div>

      </div>
  <% end %>

  <div class="text-center pt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

