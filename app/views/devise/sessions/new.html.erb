<div class="login-container my-5">
  <h2>Sign in</h2>
  <div class="facebook-div">
    <i class="fab fa-facebook facebook-icon"></i>
    <%= link_to "Contunue with facebook" , user_facebook_omniauth_authorize_path, id: "facebook" %>
  </div>

  <p>- OR -</p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field form-group">
      <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Enter email..." %>
    </div>

    <div class="field form-group">
      <%= f.password_field :password, class: "form-control", autocomplete: "current-password", placeholder: "Enter password..." %>
    </div>

    <div class="row mt-5">
      <% if devise_mapping.rememberable? %>
        <div class="col-md-6 mt-1">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="col-md-6 actions">
        <%= f.submit "Log in", class: "login-btn btn btn-success my-2 my-sm-0 pl-5 pr-5" %>
      </div>

      </div>
  <% end %>

  <div class="text-center pt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

