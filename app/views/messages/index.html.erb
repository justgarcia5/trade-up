<div class="container my-5">
  <div class="messaging">
    <% @messages.each do |message| %>
      <% if message.body %>
        <% user = User.find(message.user_id) %>

        <% if current_user.id == user.id %>
          <div class="outgoing_msg my-3"">
            <div class="sent_msg">
              <p><%= message.body %></p>
              <span class="time_date"><%= message.message_time %></span> </div>
          </div>
        <% else %>
          <div class="incoming_msg my-3">
            <% if user.avatar.attached? %>
              <div class="incoming_msg_img"> <%= image_tag user.avatar, class: "user-image" %> </div>
            <% elsif user.image.present? %>
              <div class="incoming_msg_img"> <%= image_tag user.image, class: "user-image" %> </div>
            <% else %>
              <div class="incoming_msg_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
            <% end %>
            <div class="received_msg">
              <div class="received_withd_msg">
                <p><%= message.body %></p>
                <span class="time_date"><%= message.message_time %></span></div>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <div class="type_msg">
    <div class="input_msg_write">
      <%= form_for [@conversation, @message] do |f| %>
        <%= f.text_field :body, class: "write_msg", placeholder: "Inquire about a trade..." %>
        <%= f.text_field :user_id, value: current_user.id, type: "hidden"  %><br>
        <div class="text-right">
          <%= f.button '<i class="fas fa-paper-plane"></i>'.html_safe, class: "msg_send_btn", type: "submit" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
