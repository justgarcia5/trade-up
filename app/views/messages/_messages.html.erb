<% @messages.each do |message| %>
  <% if message.body %>
    <% user = User.find(message.user_id) %>
    <% if current_user.id == user.id %>
      <div class="outgoing_msg my-3"">
        <div class="sent_msg mr-3">
          <p><%= message.body %></p>
          <span class="time_date"><%= message.message_time %></span> </div>
      </div>
    <% else %>
      <div class="incoming_msg my-3">
        <div class="incoming_msg_img"> <%= image_tag user_avatar(message.user_id), class: "user-image" %> </div>
        <div class="received_msg">
          <div class="received_withd_msg">
            <p><%= message.body %></p>
            <span class="time_date"><%= message.message_time %></span></div>
        </div>
      </div>
    <% end %>
  <% end %>
<% end %>