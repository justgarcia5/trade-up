<div>
  <div class="row">
    <div class="col-md-12">
      <% flash.each do |key, message| %>
        <div class="text-center alert alert-<%= key == 'notice' ? 'success' : 'danger' %>">
        <% if message.kind_of?(Array)%>
          <%= message.join(', ') %>
        <% else %>
          <%= message %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= yield %>
</div>
