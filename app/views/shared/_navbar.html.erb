<% if user_signed_in? %>
  <% if current_user.avatar.attached? %>
    <% @image =  url_for(current_user.avatar) %>
  <% elsif current_user.image.present? %>
    <% @image = current_user.image %>
  <% end %>

  <%= react_component "NavBar", current_user: {
    id: current_user.id,
    email: current_user.email,
    name: current_user.name,
    image: @image,
    avatar: @image
  } %>
<% else %>
  <%= react_component 'NavBar', props: {'logged_in': false}%>
<% end %>