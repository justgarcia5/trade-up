<% if user_signed_in? %>
  <% if current_user.avatar.attached? %>
    <% @image =  url_for(current_user.avatar) %>
  <% elsif current_user.image.present? %>
    <% @image = current_user.image %>
  <% else %>
    <% @image = "https://ptetutorials.com/images/user-profile.png"%>
  <% end %>

  <%= react_component "layout/NavBar", current_user: {
    id: current_user.id,
    email: current_user.email,
    name: current_user.name,
    image: @image
  } %>
<% else %>
  <%= react_component 'layout/NavBar', props: {
    'logged_in': false,
  } %>
<% end %>